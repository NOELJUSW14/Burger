<div class="container">
  <div class="jumbotron">
    <h1>Burger App!</h1>
    <h2>Make your Burger!</h2>
    <div class="form-wrapper">
      <form class="create-form">
        <div class="form-group">
          <label for="newburger">Order Your Burger</label>
          <input type="text" id="newburger" name="burger">
          <button class="btn btn-warning" id="addburger" type="submit">
            <i class="fas fa-hamburger"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
  <div class="card">
    <h5 class="card-header">Featured</h5>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
  </div>
    </div>
  </div>
</div>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Cat Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Cat</button>
</form>
